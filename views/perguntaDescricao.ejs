<%- include("partials/header.ejs") %>

<body>
    <%- include("partials/navbar.ejs") %>
    <div class="container mt-4">
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>

        <form method="POST" action="/pergunta/resposta">
            <h3>Deixe sua resposta</h3>
            <label for="" class="mt-2">Resposta:</label>
            <textarea placeholder="Digite sua resposta..." class="form-control mt-2" name="corpo" cols="30" rows="10"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary mt-2">Responder</button>
        </form>
        <hr>
        <h1>Respostas</h1>
        <% respostas.forEach(resposta => { %>
            <div class="card mt-2">
                <div class="card-body">
                    <div class="card-text">
                        <%= resposta.corpo %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</body>

<%- include("partials/footer.ejs") %>